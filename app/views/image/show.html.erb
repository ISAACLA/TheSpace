<body class='imageshow'>

  <% if current_user %>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">The Space</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="/apod">APOD</a></li>
          <li><a class="disabled" href="/images">Explore</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/users/<%= current_user.id %>/main">Dashboard</a></li>
          <li><a href="/users/<%= current_user.id %>/show">My Profile</a></li>
          <form style='display:inline-block' action="/session/<%= current_user.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="delete">
            <input id='logoutbtn' type="submit" name="" value="Log Out">
          </form>
        </ul>
      </div>
    </nav>
  <% else %>
    <ul id="dropdown1" class="dropdown-content">
      <li><a href="/login">Login</a></li>
      <li class="divider"></li>
      <li><a href="/register">Register</a></li>
    </ul>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo">The Space</a>
        <ul class="right hide-on-med-and-down">
          <li><a href="/apod">APOD</a></li>
          <li><a class="disabled" href="/images">Explore</a></li>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Join Us<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </nav>
  <% end %>

  <br>
  <!-- <iframe id="show_video" type="text/html" width="640" height="385" frameborder="0"></iframe> -->

  <div id="information" class='hide'>
    <h4 id="show_title"></h4>
    <h5 id="show_explanation"></h5>
  </div>

  <div id="button">
    <button id="showinfo" style="background-color:#26a69a" class="waves-effect btn">Show Info</button>
    <button id='nextone' style="background-color:#26a69a" class="waves-effect  btn">Next-Image</button>
  </div>
</body>
