<body class="image_imageshow">
  <header>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">The Space</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li>Hi, <%= @user.first_name %>! &nbsp &nbsp</li>
          <li><a href="/apod">APOD</a></li>
          <li><a href="/images">Explore</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/users/<%= current_user.id %>/main">Dashboard</a></li>
          <li><a href="/users/<%= current_user.id %>/profile">My Profile</a></li>

          <form style='display:inline-block' action="/session/<%= current_user.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="delete">
            <input id='logoutbtn' type="submit" name="" value="Log Out">
          </form>
        </ul>
      </div>
    </nav>
  </header>
  <br>
  <br>
  <main>

    <div class="row">
      <div class="col s2">
      </div>
      <div class="col s8">
        <center>
          <%= image_tag @image.image.url(:large), :id=> "theimage", :class => "materialboxed" %><br>
        </center>
      </div>
      <div class="col s2">
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col s6">
        <ul class="collapsible" data-collapsible="accordion">
          <li>
            <div id="collapsible-header" class="collapsible-header"><i class="material-icons">photo</i>Pioneer</div>
            <% if @image.user.id == current_user.id %>
            <div class="collapsible-body"><span>Myself</span></div>
            <% else %>
            <div class="collapsible-body"><span><a href="/users/<%= @image.user.id %>/show"><%= @image.user.first_name %> <%= @image.user.last_name %></a></span></div>
            <% end %>
          </li>
          <li>
            <div id="collapsible-header" class="collapsible-header"><i class="material-icons">title</i>Title</div>
            <div class="collapsible-body"><span><%= @image.title %></span></div>
          </li>
          <li>
            <div id="collapsible-header" class="collapsible-header"><i class="material-icons">description</i>Description</div>
            <div class="collapsible-body"><span><%= @image.description %></span></div>
          </li>
          <li>
            <div id="collapsible-header" class="collapsible-header"><i class="material-icons">thumb_up</i><%= @image.likes.count %> Likes</div>
            <div class="collapsible-body"><span>
              <% unless @image.users.include?(current_user)%>
              <form class="" action="/likes/<%= @image.id %>" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <input type="hidden" name="like[image_id]" value="<%= @image.id %>">
                <button class="waves-effect waves-light btn"><i class="small material-icons">thumb_up</i>Like</button>
              </form>
              <% else %>
              <button disabled class="waves-effect waves-light btn"><i class="small material-icons">thumb_up</i>Liked</button>
              <% end %>
            </span></div>
          </li>
        </ul>
      </div>
      <div class="col s6">
        <h6>Comments</h6>
        <% @comments.each do |comment| %>
         <%= comment.user.first_name %> says: <%= comment.comment %><br>
        <% end %>
        <form class="" action="/images/<%= @image.id %>/comment" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
          <input type="hidden" name="comment[commentable_id]" value="<%= @image.id %>">
          <input type="hidden" name="comment[commentable_type]" value="Image">
          <textarea name="comment[comment]" rows="8" cols="80"></textarea>
          <button>Add Comment</button>
        </form>
      </div>
    </div>

  </main>
  <br><br>
  <br><br>
  <footer id="footer">
    <div class="row">
      <div class="col s8">
        <h5 class="white-text">The Space</h5>
        <h6 class="grey-text text-lighten-4">Â© 2017 Isaac Yanbin La Copyright Text</h6>
      </div>
      <div class="col s4">
        <h5 class="white-text">Links</h5>
        <a href="#">NASA</a> | <a href="#">NASA Image</a> | <a href="#">Another</a>
      </div>
    </div>
  </footer>

</body>
