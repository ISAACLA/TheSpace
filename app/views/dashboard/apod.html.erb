<body class='apod'>

  <% if current_user %>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">The Space</a>
        <ul class="right hide-on-med-and-down">
          <li><a class='disabled' href="/apod">APOD</a></li>
          <li><a href="/images">Explore</a></li>
          <li><a href="/events">Events</a></li>
          <li><a href="/users/<%= current_user.id %>/main">Dashboard</a></li>
          <li><a href="/users/<%= current_user.id %>/profile">My Profile</a></li>
          <span>Welcome <%= @user.first_name %></span>
          <form style='display:inline-block' action="/session/<%= current_user.id %>" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <input type="hidden" name="_method" value="delete">
            <input id='logoutbtn' type="submit" name="" value="Log Out">
          </form>
        </ul>
      </div>
    </nav>
  <% else %>
    <ul id="dropdown1" class="dropdown-content">
      <li><a href="/login">Login</a></li>
      <li class="divider"></li>
      <li><a href="/register">Register</a></li>
    </ul>
    <nav>
      <div class="nav-wrapper">
        <a href="/" class="brand-logo">The Space</a>
        <ul class="right hide-on-med-and-down">
          <li><a class='disabled' href="/apod">APOD</a></li>
          <li><a href="/images">Explore</a></li>
          <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Join Us<i class="material-icons right">arrow_drop_down</i></a></li>
        </ul>
      </div>
    </nav>
  <% end %>

  <h4 style="margin:1% 0% 1% 3%"><i>APOD -> Astronomy Picture of the Day</i></h4>
  <center>
    <h3 id="apod_title"></h3>
    <h5 id="copyright"></h5>
    <h6 id="apod_date"></h6>
    <br>
    <div class="row">
      <div id="leftimage" class="col s8">
        <img id="apod_img_id">
        <iframe id="apod_vid_id" type="text/html" width="640" height="385" frameborder="0"></iframe>
      </div>

      <div id="righttext" class="col s4">
        <p id="apod_explaination"></p>
      </div>
    </div>


  </center>
</body>
